<% include partials/_header %>

<div class="container">
        <div class="row mt-5">
              <div class="col-md-7">
                <table class="table table-bordered table-hover">
                   <thead>
                        <tr>
                            <th>CONTADOR</th>
                             <th>ID</th>
                             <th>NOMBRE</th>
                             <th>TEMA</th>
                             <th>ACCIONES</th>
                        </tr>
                   </thead> 
                   <tbody>
                     <%if(data){%>
                        <%for(var i=0;i< data.length;i++){%>
                              <tr>
                                  <td><%= i%></td>
                                  <td><%= data[i].id%></td>
                                  <td><%= data[i].nombre%></td>
                                  <td><%= data[i].tema%></td>
                                  <td>
                                       <a href="/delete/<%= data[i].id%>" class="btn btn-outline-danger">DELETE</a>
                                       <a href="/update/<%= data[i].id%>" class="btn btn-outline-success">Update</a>
                                  </td>
                                  
                              </tr>
                            <% }%>
                    <% }%>
                   </tbody>

                </table>
              </div> 
              <div class="col-md-5">
                   <div class="card">
                        <div class="card-body">
                                <form action="/add" method="post">
                                    <div class="form-group">
                                        <input type="text" name="id" placeholder="ID" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="nombre" placeholder="Nombre" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="tema" placeholder="Tema" class="form-control" required >
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                         save data
                                    </button>
                                    
                                </form>
                        </div>
                      
                   </div> 
              </div>
        </div>

</div>
    



<div>
        <form action="/autos" method="get">
            <div class="form-group">
                <input type="text" name="id" placeholder="ID" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="text" name="nombre" placeholder="Nombre" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="text" name="tema" placeholder="Tema" class="form-control" required >
            </div>
            <button type="submit" class="btn btn-primary">
                 save data
            </button>
            
        </form>
    </div>
<% include partials/_footer %>